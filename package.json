{
  "name": "linear-git-tools",
  "displayName": "Linear Git Tools",
  "description": "Create and Open GIT branches from Linear issues and vice versa",
  "publisher": "DavidWeiss2",
  "author": "GP",
  "license": "MIT",
  "version": "1.1.0",
  "icon": "assets/128x128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/DavidWeiss2/linear-vscode-issues"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "main": "./dist/main.js",
  "contributes": {
    "commands": [
      {
        "command": "linear-git-tools.createBranch",
        "title": "Create GIT branch from Linear issue"
      },
      {
        "command": "linear-git-tools.createIssue",
        "title": "Create Linear issue from GIT branch"
      },
      {
        "command": "linear-git-tools.createIssueFromBranch",
        "title": "Create Linear issue from current GIT branch"
      }
    ],
    "configuration": {
      "title": "Linear Git Tools",
      "properties": {
        "linear-git-tools.openInDesktopApp": {
          "type": "boolean",
          "description": "Creates a new GIT branch from selected Linear issue"
        }
      }
    }
  },
  "extensionDependencies": [
    "linear.linear-connect"
  ],
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "14.x",
    "@types/vscode": "^1.65.0",
    "esbuild": "^0.14.29",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@linear/sdk": "^2.4.0"
  }
}